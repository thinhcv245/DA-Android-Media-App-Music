<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g15"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/header_cardView_iconUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/g15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/header_cover_search">
        <ImageView
            android:src="@drawable/huy_hieu_doan"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_cover_search"
        android:background="@drawable/border_rounded_input_header"
        android:layout_width="0dp"
        android:alpha=".9"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent=".7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/g15"
        app:layout_constraintLeft_toRightOf="@id/header_cardView_iconUser"
        app:layout_constraintRight_toLeftOf="@id/header_imageView_noti">

        <ImageView
            android:id="@+id/header_imageView_iconSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_search_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/header_editText_search"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#958888" />
        <EditText
            android:id="@+id/header_editText_search"
            android:hint="Tìm kiếm ..."
            android:background="@drawable/no_border"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintWidth_percent=".6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/header_imageView_iconSearch"
            app:layout_constraintRight_toLeftOf="@id/header_imageView_iconMic"/>

        <ImageView
            android:id="@+id/header_imageView_iconMic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_mic_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/header_editText_search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#232ACA" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/header_imageView_noti"
        android:src="@drawable/baseline_notifications_24"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:alpha=".9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/g15"
        app:layout_constraintLeft_toRightOf="@id/header_cover_search"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="#ffffff" />
</androidx.constraintlayout.widget.ConstraintLayout>